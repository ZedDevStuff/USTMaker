<UserControl x:Class="USTMaker.Entry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:USTMaker"
             mc:Ignorable="d" Height="18" Width="685">
    <Grid>
        <TextBox x:Name="key" Text="TextBox" VerticalAlignment="Top" HorizontalAlignment="Left" Width="150" Margin="20,0,0,0" TextChanged="key_TextChanged" />
        <TextBox x:Name="value" Margin="170,0,57,0" Text="TextBox" VerticalAlignment="Top" TextChanged="value_TextChanged"/>
        <Button x:Name="select" Content="Select File" HorizontalAlignment="Right" Margin="5,-1,0,0" VerticalAlignment="Top" Click="select_Click"/>
        <Button x:Name="delete" Background="Red" Width="19.96" Height="19.96" Margin="0,-1,-4.4,0" Click="delete_Click" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock Text="x" Margin="0,-3,0,0"></TextBlock>
        </Button>

    </Grid>
</UserControl>
