<Window x:Class="USTMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:USTMaker"
        mc:Ignorable="d"
        Title="USTMaker" Height="450" Width="800"
        Icon="/icon.png">
    <Grid>
        <Menu>
            <MenuItem Header="File">
                <MenuItem x:Name="newUst" Header="New UST" Click="newUst_Click"/>
                <MenuItem x:Name="openUst" Header="Open UST" Click="openUst_Click"/>
                <MenuItem x:Name="saveUst" Header="Save UST File" Click="saveUst_Click"/>
                <MenuItem x:Name="exportUst" Header="Export UST" Click="exportUst_Click"/>
                <MenuItem x:Name="exportAsZip" Header="Export UST as zip" Click="exportAsZip_Click"/>
            </MenuItem>
        </Menu>
        <ListView x:Name="listBox" Margin="0,17.86,0,0" VerticalContentAlignment="Top" ScrollViewer.CanContentScroll="False">
            <Button x:Name="addLevel" Click="addLevel_Click" Width="16.96" Height="16.96">
                <TextBlock Margin="0,-3,0,0" Text="+"></TextBlock>
            </Button>
        </ListView>

    </Grid>
</Window>
